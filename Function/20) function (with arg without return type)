#include<stdio.h>
#include<conio.h>
void add(int,int);//GLOBAL DECLARATION 
int main()
{
    int x,y;

    //void add(int,int);
    //LOCAL DECLARATION 
    /* IT IS USED ONLY IN THE MAIN FUNCTION */

    printf("Enter the value of x,y : ");
    scanf("%d%d",&x,&y);
    
    add(x,y);//ACTUAL PARAMETERS
    //FUNCTION CALL BY VALUE
}

void add(int a,int b)//FORMAL PARAMETERS
{
     int c;
     
     c=a+b;
     printf("Sum = %d",c);
}
