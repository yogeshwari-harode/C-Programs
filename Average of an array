#include<stdio.h>
#include<conio.h>
# define n 5
int main()
{
    int arr[n],sum=0;
    float average;
    printf("Enter the %d Elements : ",n);
    
    for(int i=0;i<n;i++)
    {

            scanf("%d",&arr[i]);
            sum=sum+arr[i];
    }
    printf("sum = %d\n",sum);  
    average=sum/(float)n;
    printf("Average = %.2f",average);                                                             
    return 0;
}
